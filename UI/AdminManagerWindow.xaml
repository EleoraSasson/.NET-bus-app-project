<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI"
        xmlns:BO="clr-namespace:BO;assembly=BLApi" x:Class="UI.AdminManagerWindow"
        mc:Ignorable="d"
        Title="Gilore Travels &gt; Admin Portal " Height="450" Width="800" Icon ="GiloreTravels.ico" BorderBrush="#FF3973F1"
    ResizeMode="CanMinimize">


    <Grid x:Name="BasicGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="borderLeft" Width="18*"/>
            <ColumnDefinition x:Name="columnBody" Width="352*"/>
            <ColumnDefinition Width="9*"/>
            <ColumnDefinition x:Name="borderRight" Width="18*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition x:Name="borderTop" Height= "1*" />
            <RowDefinition x:Name="rowBody" Height="40*"/>
            <RowDefinition x:Name="borderBottom" Height="1*"/>
        </Grid.RowDefinitions>
        <Grid x:Name="InnerGrid" Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2">
            <TabControl HorizontalAlignment="Center"  Margin="10,0,10.333,0" VerticalAlignment="Top" Height="400" Width="700" >
                <TabItem Header="Manage Info">
                    <Grid Background="#FFE5E5E5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="250*"/>
                            <ColumnDefinition Width="200*"/>
                        </Grid.ColumnDefinitions>
                    </Grid>
                </TabItem>
                <TabItem Header="Bus Info" FontFamily="HP Simplified" HorizontalAlignment="Left" Width="59" Height="22" Margin="-2,-2,0,0" VerticalAlignment="Top">
                    <Grid Background="#FFE5E5E5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="0*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition x:Name="fleetRow" Height="1*"/>
                            <RowDefinition x:Name="routeRow" Height="1*"/>
                            <RowDefinition x:Name="scheduleRow" Height="1*"/>
                        </Grid.RowDefinitions>
                        <DockPanel Grid.Row="0" LastChildFill="True" Margin="5,5,1,10" Grid.RowSpan="3">
                            <Expander x:Name="Ex_BusFleet" Header="Bus Fleet" DockPanel.Dock="Top">
                                <Expander.Background>
                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                        <GradientStop Color="LightBlue"  Offset="0.009"/>
                                        <GradientStop Color="CadetBlue"  Offset="0.9"/>
                                    </LinearGradientBrush>
                                </Expander.Background>
                                <StackPanel Orientation="Horizontal" Height="270">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="0*"/>
                                            <ColumnDefinition Width="13*"/>
                                            <ColumnDefinition Width="63*"/>
                                            <ColumnDefinition Width="283*"/>
                                            <ColumnDefinition Width="282*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition x:Name="FleetList" Height="10*"/>
                                            <RowDefinition x:Name="AddToFleet" Height="1*"/>
                                        </Grid.RowDefinitions>

                                        <ListView x:Name="lv_BusList" ItemsSource="{Binding}" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Stretch" Margin="5,10,0,10" Width="560" FontFamily="Hp Simplified" FontSize="12" FontStyle="Normal" FontWeight="Medium" Foreground="#FF052066" BorderBrush="CadetBlue" Background="#FFE8EBF7" SelectionChanged="lv_BusList_SelectionChanged" Grid.Column="3" Grid.ColumnSpan="2">
                                            <ListView.ItemContainerStyle>
                                                <Style x:Name="BusList_Style" TargetType="{x:Type ListViewItem}">
                                                    <Setter Property="ToolTip">
                                                        <Setter.Value>
                                                            <ToolTip>
                                                                <TextBlock x:Name="tb_Tooltip" Text="Double-Click for more Information about this Bus."/>
                                                            </ToolTip>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Foreground" Value ="Black"/>
                                                        </Trigger>
                                                        <DataTrigger Binding="{Binding bus.BusStatus}"  Value="Available" >
                                                            <Setter Property="Foreground" Value="DarkGreen" />
                                                            <Setter Property="Background" Value ="WhiteSmoke"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </ListView.ItemContainerStyle>
                                            <ListView.View>
                                                <GridView x:Name="gv_BusList">
                                                    <GridViewColumn Header="License Number:" Width="95" DisplayMemberBinding="{Binding bus.BusLicense }"/>
                                                    <GridViewColumn Header="Mileage:" Width="60" DisplayMemberBinding="{Binding bus.BusMileage }"/>
                                                    <GridViewColumn Header="Fuel:" Width="60" DisplayMemberBinding="{Binding bus.BusFuel}"/>
                                                    <GridViewColumn Header="Bus Status:" Width="150" DisplayMemberBinding="{Binding bus.BusStatus}"/>
                                                    <GridViewColumn Header="More Options:" Width="100">
                                                        <GridViewColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <Button x:Name="B_Options" ToolTip="Select for Refuel, Maintenance and Travel Options." Content="Options..." IsEnabled="{Binding IsButtonEnabled}"/>
                                                                <!--Click="B_Options_Click"-->
                                                                <DataTemplate.Triggers>
                                                                    <DataTrigger Binding="{Binding bus.BusStatus}" Value="AtService">
                                                                        <Setter Property="IsEnabled" Value="False"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding bus.BusStatus}" Value="Refueling">
                                                                        <Setter Property="IsEnabled" Value="False"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding bus.BusStatus}" Value="Travelling">
                                                                        <Setter Property="IsEnabled" Value="False"/>
                                                                    </DataTrigger>
                                                                </DataTemplate.Triggers>
                                                            </DataTemplate>
                                                        </GridViewColumn.CellTemplate>
                                                    </GridViewColumn>
                                                </GridView>
                                            </ListView.View>
                                        </ListView>
                                        <Button x:Name="b_AddBus" Content="+     Add Bus " Margin="5,236,0,5" Grid.RowSpan="2"  Background="WhiteSmoke" BorderBrush="CadetBlue" Click="b_AddBus_Click" Grid.Column="3" Grid.ColumnSpan="2"/>
                                        <Label  x:Name="l_NumberofBuses" Content="No. of Buses:" HorizontalAlignment="Left" Margin="1,76,0,0" VerticalAlignment="Top" RenderTransformOrigin="0,-0.231" Width="75" Height="26" Grid.Column="1" Grid.ColumnSpan="2"/>
                                        <TextBox x:Name="tb_busNum" HorizontalAlignment="Left" Height="23" Margin="6,102,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="49" Background="WhiteSmoke" BorderBrush="CadetBlue" Cursor="None" Grid.Column="1" Grid.ColumnSpan="2"  FontFamily="HP Simplified" IsReadOnly="True"/>

                                    </Grid>
                                </StackPanel>
                            </Expander>
                            <Expander x:Name="Ex_BusRoutes" Header="Bus Routes" DockPanel.Dock="Top">
                                <Expander.Background>
                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                        <GradientStop Color="LightBlue"  Offset="0.009"/>
                                        <GradientStop Color="CadetBlue"  Offset="0.9"/>
                                    </LinearGradientBrush>
                                </Expander.Background>
                                <StackPanel Orientation="Vertical" Height="270">
                                    <Grid Name="RouteIDGrid" Width="655" Margin="16,5,15,5" Height="37">
                                        <Label x:Name="l_RouteID" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,9,552,0" Content="Route ID:"/>
                                        <ComboBox x:Name="Cb_RouteID" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="109,10,0,0" Width="50" ItemsSource="{Binding }" MaxDropDownHeight="60"  Background="WhiteSmoke" BorderBrush="CadetBlue" IsEditable="False" />
                                    </Grid>
                                    <Grid x:Name="ExpanderGridRouteInfo" Width="655" Margin="16,5" Height="232" >
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition x:Name="stationInfoC0" Width="109*"/>
                                            <ColumnDefinition x:Name="stationInfoC1" Width="109*"/>
                                            <ColumnDefinition x:Name="stationInfoC2" Width="215*"/>
                                            <ColumnDefinition Width="222*"/>
                                        </Grid.ColumnDefinitions>

                                        <Label x:Name="l_RouteNO" Grid.Column="0" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,61,0,0" Content="Route Number:"/>
                                        <Label x:Name="l_TimeStart" Grid.Column="0" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,96,0,0" Content="Starting Station:"/>
                                        <Label x:Name="l_TimeEnd" Grid.Column="0" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,131,0,0" Content="Ending Station:"/>
                                        <Label x:Name="l_Active" Grid.Column="0" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,178,0,0" Content="Line Erased:"/>
                                        <TextBox x:Name="Tb_RouteNum" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,62,0,0" Width="84" Height="20"  Background="WhiteSmoke" BorderBrush="CadetBlue" Text="{Binding Route.BusLineNo, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" IsReadOnly="True"/>
                                        <TextBox x:Name="Tb_TimeSart" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,97,0,0" Width="84" Height="20"  Background="WhiteSmoke" BorderBrush="CadetBlue" Text="{Binding Route.BusStart, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" IsReadOnly="True"/>
                                        <TextBox x:Name="Tb_TimeEnd" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,132,0,0" Width="84" Height="20"  Background="WhiteSmoke" BorderBrush="CadetBlue" Text="{Binding Route.BusEnd, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" IsReadOnly="True"/>
                                        <CheckBox x:Name="ChB_IsActive" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,183,0,0"  Background="WhiteSmoke" BorderBrush="CadetBlue"  IsChecked="{Binding Route.LineErased, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"/>

                                        <Label x:Name="l_Region" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,27,0,0" Content="Region of Route:" />
                                        <TextBox x:Name="Tb_Region" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,30,0,0" Width="104" Height="20"  Background="WhiteSmoke" BorderBrush="CadetBlue" Text="{Binding Route.BusRegion, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" IsReadOnly="True"/>
                                        <Label x:Name="l_BusStops" Grid.Column="2" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,2,97,0" Content="Stops on Route:"/>
                                        <ListBox x:Name="lb_BusStops"  Grid.Row="1" ItemsSource="{Binding}" Margin="31,27,39,53" Grid.Column="2"  Background="WhiteSmoke" BorderBrush="CadetBlue" Grid.ColumnSpan="2" SelectionChanged="lb_BusStops_SelectionChanged" />
                                        <Button x:Name="b_AddRoute" Grid.Column="3" Grid.Row="1" Margin="83,176,39,27" Height="20" Width="100" Content="  +   Add Route" Background="WhiteSmoke" BorderBrush="CadetBlue"
                                                Click="b_AddRoute_Click"/>
                                    </Grid>
                                </StackPanel>
                            </Expander>
                            <Expander x:Name="Ex_BusStations" Header="Bus Stations" DockPanel.Dock="Top">
                                <Expander.Background>
                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                        <GradientStop Color="LightBlue"  Offset="0.009"/>
                                        <GradientStop Color="CadetBlue"  Offset="0.9"/>
                                    </LinearGradientBrush>
                                </Expander.Background>
                                <StackPanel Orientation="Vertical" Height="270">
                                    <Grid Height="39">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition Width="48*"/>
                                        </Grid.ColumnDefinitions>
                                        <Label x:Name="l_StationCode" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,13,561,0" Content="Station Code:"/>
                                        <ComboBox x:Name="Cb_StationNo" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="119,13,0,0" Width="78" ItemsSource="{Binding}" MaxDropDownHeight="60"  Background="WhiteSmoke" BorderBrush="CadetBlue" IsEditable="False" Grid.Column="1"/>

                                    </Grid>
                                    <Grid x:Name="ExpanderGrid" Width="655" Margin="16,5" Grid.Row="1" Height="214">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="162*"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition x:Name="routeInfoC0" Width="109*"/>
                                            <ColumnDefinition x:Name="routeInfoC1" Width="109*"/>
                                            <ColumnDefinition x:Name="routeInfoC2" Width="312*"/>
                                            <ColumnDefinition Width="125*"/>
                                        </Grid.ColumnDefinitions>

                                        <Label x:Name="l_StationLat" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Top" Content="Latitude:" Margin="0,26,0,0"/>
                                        <Label x:Name="l_StationLon" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,62,93,0" Content="Longitude:" Width="78" Height="25" RenderTransformOrigin="0.793,0.56" Grid.ColumnSpan="2"/>
                                        <Label x:Name="l_Address" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,93,108,0" Content="Address:" Grid.ColumnSpan="2"/>

                                        <Label x:Name="l_StopActive" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,181,0,0" Content="Is Active:"/>
                                        <TextBox x:Name="Tb_StationLat" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,29,0,0" Width="84" Height="20"  Background="WhiteSmoke" BorderBrush="CadetBlue " Text="{Binding Stop.StopLocation.Latitude, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" IsReadOnly="True"/>
                                        <TextBox x:Name="Tb_StationLon" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,63,0,0" Width="84" Height="20"  Background="WhiteSmoke" BorderBrush="CadetBlue" Text="{Binding Stop.StopLocation.Longitude, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" IsReadOnly="True"/>
                                        <TextBox x:Name="Tb_StationAddress" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,96,0,0" Width="104" Height="86"  Background="WhiteSmoke" BorderBrush="CadetBlue" TextWrapping="Wrap" Text="{Binding Stop.StopAddress, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" IsReadOnly="True"/>
                                        <CheckBox x:Name="ChB_StopIsActive" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,187,0,0"  Background="WhiteSmoke" BorderBrush="CadetBlue" IsChecked="{Binding Stop.StopActive, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=true}" />
                                        <Label x:Name="l_LineIDs" Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,2,79,0" Content="Lines that pass through this Station:" Width="205" Height="30"/>
                                        <ListBox x:Name="lb_LineIDs" ItemsSource="{Binding}" Margin="28,29,39,37" Grid.Column="2"  Background="WhiteSmoke" BorderBrush="CadetBlue" SelectionChanged="lb_LineIDs_SelectionChanged" Grid.ColumnSpan="2"/>
                                        <Button x:Name="b_AddStation" Grid.Column="2" Margin="298,182,39,12" Height="20" Width="100" Content="  +   Add Station" Background="WhiteSmoke" BorderBrush="CadetBlue"
                                                 Grid.ColumnSpan="2"/>
                                        <!--Click="b_AddStation_Click"-->
                                    </Grid>
                                </StackPanel>
                            </Expander>
                            <Expander x:Name="Ex_BusSchedule" Header="Bus Schedule" DockPanel.Dock="Top">
                                <Expander.Background>
                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                        <GradientStop Color="LightBlue"  Offset="0.009"/>
                                        <GradientStop Color="CadetBlue"  Offset="0.9"/>
                                    </LinearGradientBrush>
                                </Expander.Background>
                                <StackPanel Orientation="Horizontal" Height="270">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition x:Name="RegionSearch" Height="2*"/>
                                            <RowDefinition x:Name="Schedule" Height="10*"/>
                                        </Grid.RowDefinitions>
                                        <Label x:Name="l_SearchRegion" Grid.Row="0" Content="Select Region:" Margin="39,12,559,5"/>
                                        <ComboBox x:Name="Cb_Region" IsEditable="False" IsReadOnly="True" ItemsSource="{Binding}"  Grid.Row="0" Margin="129,13,600,9"  SelectionChanged="Cb_Region_SelectionChanged" />
                                        <Label x:Name="l_Search" Grid.Row="0" Content="Search by:" Margin="227,12,371,5"/>
                                        <ComboBox x:Name="Cb_Search" IsEditable="False" IsReadOnly="True" ItemsSource="{Binding}"  Grid.Row="0" Margin="295,13,410,10" SelectionChanged="Cb_Search_SelectionChanged"/>
                                        <TextBox x:Name="Tb_SearchBox" Height="23" Width="150" Margin="440,12,216,9" Cursor="IBeam" ToolTip="Select search by and type search query here" TextChanged="Tb_SearchBox_TextChanged" IsReadOnly="False"/>
                                        <DataGrid x:Name="Dg_BusSchedule" IsTextSearchEnabled="False" CanUserAddRows="False" Margin="39,0,151,12" MaxHeight="250"
                                              AutoGenerateColumns="False" Grid.Row="1" Height="213" VerticalAlignment="Bottom" SelectionChanged="Dg_BusSchedule_SelectionChanged" >
                                            <DataGrid.Columns>
                                                <DataGridTextColumn Header="Route No." Binding="{Binding CurrentRoute.Route.BusLineNo}" CanUserSort="True" CanUserReorder="True" SortDirection="{x:Null}"/>
                                                <DataGridTextColumn Header="Bus Road ID:" Binding="{Binding}" CanUserSort="True" CanUserReorder="True" SortDirection="{x:Null}"/>
                                                <DataGridTemplateColumn Header="Date:" Width="60">
                                                    <DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <DatePicker SelectedDate="{Binding}" BorderThickness="0" />
                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellTemplate>
                                                </DataGridTemplateColumn>
                                                <DataGridTextColumn Header="Start Stop:" Binding="{Binding}" CanUserSort="True" CanUserReorder="True" SortDirection="{x:Null}"/>
                                                <DataGridTextColumn Header="Departure Time:" Binding="{Binding}" CanUserSort="True" CanUserReorder="True" SortDirection="Descending"/>
                                                <DataGridTextColumn Header="End Stop:" Binding="{Binding}" CanUserSort="True" CanUserReorder="True" SortDirection="{x:Null}"/>
                                                <DataGridTextColumn Header="Arrival Time:" Binding="{Binding}" CanUserSort="True" CanUserReorder="True" SortDirection="Descending"/>
                                                <DataGridTextColumn Header="No. of Stops:" Binding="{Binding}" CanUserSort="True" CanUserReorder="True" SortDirection="{x:Null}"/>
                                                <DataGridTextColumn Header="Driver" Binding="{Binding}" CanUserSort="True" CanUserReorder="True" SortDirection="{x:Null}"/>

                                            </DataGrid.Columns>
                                        </DataGrid>
                                        <Label x:Name="l_WhatInTable" BorderThickness="0" Foreground="DarkBlue" Grid.Row="1" Content="Bus Route Schedule for Selected Region:" Margin="-83,89,681,105" RenderTransformOrigin="0.632,-0.759">
                                            <Label.RenderTransform>
                                                <TransformGroup>
                                                    <ScaleTransform/>
                                                    <SkewTransform/>
                                                    <RotateTransform Angle="-90"/>
                                                    <TranslateTransform X="-61.449" Y="6.537"/>
                                                </TransformGroup>
                                            </Label.RenderTransform>
                                        </Label>
                                    </Grid>
                                </StackPanel>
                            </Expander>
                            <StackPanel Orientation="Horizontal" Background="CadetBlue" Margin="1,1,1,1" >
                                <Image Source="LogoFull.PNG" Cursor="Arrow" Stretch="None" Margin="2,5,5,5" Opacity="0.45" Width="357"/>
                                <TextBlock FontStyle="Normal" HorizontalAlignment="Center" FontFamily="HP Simplified" FontSize="14" FontWeight="Black" Foreground="#FF0E1340" TextWrapping="Wrap" Width="318" VerticalAlignment="Center" IsEnabled="False" Cursor="Arrow" TextAlignment="Center" FontStretch="SemiCondensed" Margin="0,2,0,1"><Run Text="&quot;"/><Run Text="Here at Gilore Travels"/><Run FontSize="9" Text=" (TM) "/> <Run Text ="we believe that travel is more than simply a way to get from A to B;"/><LineBreak/><Run FontSize="16" Foreground="Black"  Text="travel is an adventure"/><Run Text=". "/><LineBreak/><Run Text="We have all had those days were by the time you get to that all-important meeting you are exhausted from  the stress of traffic, late transits and the like. "/><LineBreak/><Run Text ="We understand this, which is why at Gilore Travels"/><Run FontSize="9" Text=" (TM) "/><Run Text = "our priorities are"/> <Run Text= " reliability, ease and convenience. "/><Run Text="We insure that our buses are well maintained, our routes planned and based on updated road issues and our staff highly qualified. "/><LineBreak/><Run/><Run Text=" "/><Run FontStyle="Italic" Foreground="Black" Text="We aim to give you the ultimate travel experience: comfortable, practical, efficient"/><Run Text=". &quot;"/><Run  FontSize="9" Text= " -The GT Team"/></TextBlock>

                            </StackPanel>
                        </DockPanel>
                    </Grid>

                </TabItem>
                <TabItem Header="Staff Info">
                    <Grid Background="#FFE5E5E5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="216*"/>
                            <ColumnDefinition Width="479*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock HorizontalAlignment="Left" Margin="30,27,0,0" TextWrapping="Wrap" Text="Search:" VerticalAlignment="Top"/>
                        <TextBox x:Name="SearchTB" HorizontalAlignment="Left" Height="17" Margin="73,26,0,0" TextWrapping="Wrap" Text=" " VerticalAlignment="Top" Width="109" RenderTransformOrigin="0.511,-0.681" />
                        <ListView x:Name="lv_Staff" ItemsSource = "{Binding}" HorizontalAlignment="Left" Height="233" Margin="46,69,0,0" VerticalAlignment="Top" Width="293" Grid.ColumnSpan="2">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="First Name:" Width="100" DisplayMemberBinding="{Binding BusDriverFirst}"/>
                                    <GridViewColumn Header="Last Name:" Width="100" DisplayMemberBinding="{Binding BusDriverLast}"/>
                                    <GridViewColumn Header="ID:" Width="100" DisplayMemberBinding="{Binding BusDriverID}"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                        <Image x:Name="StaffImage" HorizontalAlignment="Left" Height="67" Margin="186.5,55,0,0" VerticalAlignment="Top" Width="68" RenderTransformOrigin="0.39,0.093" Grid.Column="1"/>
                        <TextBox x:Name="StaffInfoFirst" Text="{Binding BusDriverFirst}"  HorizontalAlignment="Left" Height="19" Margin="294.5,55,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="109" Grid.Column="1"/>
                        <TextBox x:Name="StaffInfoLast" Text="{Binding BusDriverLast}"  HorizontalAlignment="Left" Height="19" Margin="294.5,55,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="109"  Grid.Column="1"/>
                        <TextBox x:Name="StaffInfoID" Text="{Binding BusDriverID}"  HorizontalAlignment="Left" Height="19" Margin="294.5,55,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="109"  Grid.Column="1"/>
                        <TextBox x:Name="StaffInfoPos" Text="{Binding StaffPosition}"  HorizontalAlignment="Left" Height="19" Margin="294.5,55,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="109"  Grid.Column="1"/>
                    </Grid>
                </TabItem>
                <TabItem Header="User Info">
                    <Grid Background="#FFE5E5E5">
                        <ListView x:Name="lv_Users" ItemsSource="{Binding Path= Users}"  HorizontalAlignment="Left" Height="233" Margin="102,83,0,0" VerticalAlignment="Top" Width="505" Grid.ColumnSpan="2" SelectionChanged="lv_Users_SelectionChanged">
                            <ListView.View>
                                <GridView x:Name="gv_UserList">
                                    <GridViewColumn Header="UserName:" Width="100" DisplayMemberBinding="{Binding userName}"/>
                                    <GridViewColumn Header="First Name:" Width="100" DisplayMemberBinding="{Binding userFirst}"/>
                                    <GridViewColumn Header="Last Name:" Width="100" DisplayMemberBinding="{Binding userLast}"/>
                                    <GridViewColumn Header="ID:" Width="100" DisplayMemberBinding="{Binding userId}"/>
                                    <GridViewColumn Header="Permission:" Width="100" DisplayMemberBinding="{Binding adminPermission}"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </Grid>

                </TabItem>
                <TabItem Header="Simulation">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition x:Name="SimulationBorderLeft" Width="17*"/>
                            <ColumnDefinition x:Name="SimulationMiddle_C" Width="152*"/>
                            <ColumnDefinition Width="13*"/>
                            <ColumnDefinition Width="496*"/>
                            <ColumnDefinition x:Name="SimulationBorderRight" Width="17*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition x:Name="SimulationBorderTop" Height="10*"/>
                            <RowDefinition x:Name="SimulationMIddle_R" Height="200*"/>
                            <RowDefinition x:Name="SimulationBorderBot" Height="10*"/>
                        </Grid.RowDefinitions>
                        <Grid x:Name = "InnerSimulationGrid" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="4" Margin="0.333,0.333,15.723,16.333" Grid.RowSpan="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition x:Name="SimulationWindow" Width="413*"/>
                                <ColumnDefinition x:Name="SimulationControl" Width="248*"/>
                            </Grid.ColumnDefinitions>
                            <DataGrid  x:Name="dg_Simulation" Grid.Column="0" Margin="0,32,0,26"  Background="WhiteSmoke" BorderBrush="CadetBlue" IsReadOnly="True">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Route No:" Width="70" Binding="{Binding CurrentRoute.Route.BusLineNo, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}"/>
                                    <DataGridTextColumn Header="Line ID:" Width="60" Binding="{Binding CurrentRoute.Route.BusLineID, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}"/>
                                    <DataGridTextColumn Header="ETA:" Width="60" Binding="{Binding BusOnRoute.BusFormalDT , Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}"/>
