<Window x:Class="Ex3b_GUI.BusInfoWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ex3b_GUI"
        mc:Ignorable="d"
          Title="Gilore Travels > Bus Information" Height="250" Width="350" Icon ="GiloreTravels.ico" BorderBrush="#FF3973F1">
    <Grid x:Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" x:Name="LeftBorder"/>
            <ColumnDefinition Width="30*" x:Name="BodyColumn"/>
            <ColumnDefinition Width="1*" x:Name="RightBorder"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" x:Name="TopBorder"/>
            <RowDefinition Height="4*" x:Name="BodyRow"/>
            <RowDefinition Height="1*" x:Name="BottomBorder"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="tb_BusInfo" Grid.Column="1" Grid.Row="1" Text="{Binding}" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="14" FontWeight="Medium" FontFamily="Hp Simplified" Foreground="#FF052066"/>
    </Grid>
</Window>
