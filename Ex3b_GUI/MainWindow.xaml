<Window x:Class="Ex3b_GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ex3b_GUI"
        mc:Ignorable="d"
        Title="Galore Travels" Height="450" Width="800" Icon ="GaloreTravels.ico">

    <Grid x:Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" x:Name="LeftBorder"/>
            <ColumnDefinition Width="30*" x:Name="BodyColumn"/>
            <ColumnDefinition Width="1*" x:Name="RightBorder"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" x:Name="TopBorder"/>
            <RowDefinition Height="5*" x:Name="Heading"/>
            <RowDefinition Height="25*" x:Name="BodyRow"/>
            <RowDefinition Height="3*" x:Name="ButtonRow"/>
            <RowDefinition Height="1*" x:Name="BottomBorder"/>
        </Grid.RowDefinitions>

        <DataGrid x:Name ="DG_Buses" Grid.Column="1" Grid.Row="2" ItemsSource="{Binding}" SelectionChanged="DG_Buses_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="License Number:" Binding ="{Binding Path = BusLicense}" />
                <DataGridTextColumn Header="Driver:" Binding="{Binding Path = BusDriver}"/>
                <DataGridTextColumn Header="Mileage:" Binding="{Binding Path = BusMileage}"/>
                <DataGridTextColumn Header="Status:" Binding="{Binding Path = BusStatus}"/>
            </DataGrid.Columns>
        </DataGrid>
       
       <Button x:Name="B_AddBus" Content="Add Bus" Grid.Column="1" HorizontalAlignment="Left" Margin="641,7,0,4" Grid.Row="3" Width="75" FontFamily="HP Simplified" FontSize="14" FontWeight="SemiBold" FontStyle="Normal" Click="B_AddBus_Click"/>


    </Grid>
</Window>
